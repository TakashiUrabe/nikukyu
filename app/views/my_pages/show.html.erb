<div class="max-w-lg pb-20">
    <h1 class="text-xl text-yellow-900 my-2 font-zenmaru text-center font-bold">マイページ</h1>
    <p class='text-center'>カードをタップで編集・保存画面にいけます</p>

    <%= turbo_frame_tag "image-list" do %>
      <div>
        <% @profile_cards.each do |profile_card| %>
          <div class='p-5 my-10'>
            <%= link_to edit_profile_card_path(profile_card) do %>
              <h1 class="text-xl font-zenmaru text-yellow-900 my-2 text-center font-bold"><%= profile_card.name %>ちゃんのプロフィールカード</h1>
              <%= image_tag profile_card.profile_card_data_a.to_s, class:'my-5' %>
              <%= image_tag profile_card.profile_card_data_b.to_s, class:'my-5' %>
              <%= image_tag profile_card.profile_card_data_c.to_s, class:'my-5' %>
              <%= image_tag profile_card.profile_card_data_d.to_s, class:'my-5' %>
            <% end %>
            <div class="flex my-2 justify-center">
              <div  class='btn btn-primary'>
                <%= link_to '診断結果をみる', controller: :profile_cards, action: :result, id: profile_card.id %>
              </div>
            </div>
          </div>

        <% end %>
      </div>
      <%= paginate(@profile_cards) %>
    <% end %>
  </div>
</div>
