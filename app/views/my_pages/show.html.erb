<div class="max-w-lg pb-20">
    <h1 class="text-xl text-yellow-900 my-2 font-zenmaru text-center font-bold"><%= t('.title') %></h1>
    <div class='my-10 p-3 grid card bg-base-200 rounded-box place-items-center'>
    <p class='text-center'><%= t('.description') %></p>
    </div>

    <%= turbo_frame_tag "image-list" do %>
      <div>
        <% @profile_cards.each do |profile_card| %>
          <div class='p-5 my-10'>
            <%= link_to edit_profile_card_path(profile_card) do %>
              <h1 class="text-xl font-zenmaru text-yellow-900 my-2 text-center font-bold"><%= profile_card.name %>ちゃんのプロフィールカード</h1>
              <div class='justify-center flex flex-wrap px-2'>
                <% card_type_a_f = [profile_card.profile_card_data_a.to_s, profile_card.profile_card_data_b.to_s, profile_card.profile_card_data_c.to_s, profile_card.profile_card_data_d.to_s, profile_card.profile_card_data_e.to_s, profile_card.profile_card_data_f.to_s] %>
                <% card_type_a_f.each do |type| %>
                  <%= image_tag type, class:'my-2' %>
                <% end %>
                <% card_type_g_l = [profile_card.profile_card_data_g.to_s, profile_card.profile_card_data_h.to_s, profile_card.profile_card_data_i.to_s, profile_card.profile_card_data_j.to_s, profile_card.profile_card_data_k.to_s, profile_card.profile_card_data_l.to_s] %>
                <% card_type_g_l_present = [profile_card.profile_card_data_g.present?, profile_card.profile_card_data_h.present?, profile_card.profile_card_data_i.present?, profile_card.profile_card_data_j.present?, profile_card.profile_card_data_k.present?, profile_card.profile_card_data_l.present?] %>
                <% card_type_g_l.zip(card_type_g_l_present).each do |type,present| %>
                  <%= image_tag type, class:'my-2 p-1 w-1/2' if present %>
                <% end %>
              </div>
              <div class='justify-center flex flex-wrap px-2'>
                <% card_type_g_l = [profile_card.profile_card_data_m.to_s, profile_card.profile_card_data_n.to_s, profile_card.profile_card_data_o.to_s, profile_card.profile_card_data_p.to_s, profile_card.profile_card_data_q.to_s, profile_card.profile_card_data_r.to_s] %>
                <% card_type_g_l_present = [profile_card.profile_card_data_m.present?, profile_card.profile_card_data_n.present?, profile_card.profile_card_data_o.present?, profile_card.profile_card_data_p.present?, profile_card.profile_card_data_q.present?, profile_card.profile_card_data_r.present?] %>
                <% card_type_g_l.zip(card_type_g_l_present).each do |type,present| %>
                  <%= image_tag type, class:'my-2 p-1 w-1/2' if present %>
                <% end %>
              </div>
            <% end %>
            <div class="flex my-2 justify-center">
              <div  class='btn btn-primary'>
                <%= link_to t('.view_result'), controller: :results, action: :result, id: profile_card.id %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
      <%= paginate(@profile_cards) %>
    <% end %>
  </div>
</div>
