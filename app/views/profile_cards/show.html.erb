  <h1 class="text-xl font-zenmaru text-yellow-900 my-2 text-center font-bold"><%= @profile_card.name %>ちゃんのプロフィールカード</h1>
  <div class='py-5'>
    <%= image_tag @profile_card.profile_card_data_a.to_s %>
  </div>
  <div class='py-5'>
    <%= image_tag @profile_card.profile_card_data_b.to_s %>
  </div>
  <div class='py-5'>
    <%= image_tag @profile_card.profile_card_data_c.to_s %>
  </div>
  <div class='py-5'>
    <%= image_tag @profile_card.profile_card_data_d.to_s %>
  </div>
  <div class="flex my-2 justify-center">
    <div  class='btn btn-primary'>
      <%= link_to '診断結果をみる', controller: :profile_cards, action: :result, id: @profile_card.id %>
    </div>
